#include <bits/stdc++.h> 
vector<int> nextPermutation(vector<int> &arr, int n)
{ int index=-1;
    for(int i=n-2;i>=0;i--){
        if(arr[i]<arr[i+1]){
            index=i;
            break;
        }  
    }
    if(index==-1){
        reverse(arr.begin(),arr.end());
        return arr;
    }
    for(int i=n-1;i>index;i--){
        if(arr[i]>arr[index]){
            swap(arr[i],arr[index]);
            break;
        }
    }
    // cout<<"After 1"<<endl;
    // for(auto it:arr){
    //     cout<<it<<" ";
    // }
    reverse(arr.begin()+index+1,arr.end());
    return arr;
}
